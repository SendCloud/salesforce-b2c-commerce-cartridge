{
  "name": "sendcloud",
  "version": "21.1.0",
  "description": "Sendcloud SFRA cartridge",
  "packageName": "int_sendcloud",
  "main": "index.js",
  "author": "Wolfpack <info@wolfpack-dcs.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalesforceCommerceCloud/link_sendcloud.git"
  },
  "paths": {
    "base": "../storefront-reference-architecture/cartridges/app_storefront_base/"
  },
  "scripts": {
    "lint:js": "sgmf-scripts --lint js",
    "lint:isml": "./node_modules/.bin/isml-linter",
    "test": "sgmf-scripts --test test/unit/**/*.js",
    "uploadCartridge": "sgmf-scripts --uploadCartridge int_sendcloud && sgmf-scripts --uploadCartridge bm_sendcloud",
    "setup": "npm install && npm run compile",
    "build": "npm run compile:js",
    "compile:js": "sgmf-scripts --compile js",
    "watch": "sgmf-scripts --watch --onlycompile",
    "watch:upload": "sgmf-scripts --watch"
  },
  "engines": {
    "node": ">=4.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^5.0.3",
    "isml-linter": "^5.35.1",
    "mocha": "^7.2.0",
    "proxyquire": "1.7.4",
    "sgmf-scripts": "^2.3.0",
    "sinon": "^1.17.7"
  },
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-transform-object-assign": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "autoprefixer": "^9.7.2",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.4.0",
    "file-loader": "^5.0.2",
    "jquery": "^3.4.1",
    "sgmf-scripts": "^2.3.0"
  },
  "browserslist": [
    ">1%",
    "last 10 versions",
    "ie >= 10"
  ],
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-object-assign"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
